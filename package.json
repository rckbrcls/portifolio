{
  "name": "portifolio",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:main": "turbo run build --filter=main...",
    "build:alan-turing": "turbo run build --filter=alan-turing...",
    "build:lojinha-simples": "turbo run build --filter=lojinha-simples...",
    "build:electoral-system": "turbo run build --filter=lojinha-simples...",
    "build:lojinha-simples": "turbo run build --filter=lojinha-simples...",
    "build:lojinha-simples": "turbo run build --filter=lojinha-simples...",
    "build:lojinha-simples": "turbo run build --filter=lojinha-simples...",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:services": "turbo run build --filter=./services/*",
    "dev:apps": "turbo run dev --filter=./apps/*",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "dev:services": "turbo run dev --filter=./services/*"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
